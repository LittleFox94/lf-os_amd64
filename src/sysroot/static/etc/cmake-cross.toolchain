set(CMAKE_SYSTEM_NAME LF-OS)
set(CMAKE_SYSTEM_PROCESSOR x86-64)
set(CMAKE_MODULE_PATH "${CMAKE_MODULE_PATH};$ENV{LFOS_SYSROOT}/share/cmake/Modules")

set(triple x86_64-pc-lf_os)
set(CMAKE_SYSROOT $ENV{LFOS_SYSROOT})

set(CMAKE_C_COMPILER "$ENV{LFOS_SYSROOT}/bin/clang")
set(CMAKE_C_COMPILER_TARGET ${triple})
set(CMAKE_CXX_COMPILER "$ENV{LFOS_SYSROOT}/bin/clang++")
set(CMAKE_CXX_COMPILER_TARGET ${triple})
